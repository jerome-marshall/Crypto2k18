<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp">

    <pl.hypeapp.materialtimelineview.MaterialTimelineView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:timeline_margin_start="32dp"
        android:background="@color/picker1"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:timeline_bottom_radio_color="@color/colorPrimary"
        app:timeline_position="first"
        app:timeline_type="item">


        <TextView
            android:id="@+id/event_location_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="@+id/event_name_header"
            app:layout_constraintTop_toBottomOf="@+id/event_name_header"
            tools:text="6 th floor" />

        <TextView
            android:id="@+id/event_name_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Impulse 2k18" />

        <TextView
            android:id="@+id/event_time_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/event_location_header"
            tools:text="9 am-11pm" />



    </pl.hypeapp.materialtimelineview.MaterialTimelineView>

</android.support.v7.widget.CardView>
